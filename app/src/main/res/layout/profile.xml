<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="600px"
        android:layout_height="600px"
        android:id="@+id/imageView10"
        android:src="@drawable/stu2"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/editbtn"
        android:layout_alignStart="@+id/editbtn" />

    <Button
        android:layout_width="700px"
        android:layout_height="140px"
        android:text="Change Profile Picture"
        android:textColor="#FFFFFF"
        android:id="@+id/changebtn"
        android:background="#3498DB"
        android:layout_below="@+id/imageView10"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Name:"
        android:id="@+id/nameView"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/imageView10"
        android:layout_toStartOf="@+id/imageView10" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Email:"
        android:id="@+id/emailView"
        android:layout_below="@+id/nameView"
        android:layout_alignLeft="@+id/nameView"
        android:layout_alignStart="@+id/nameView"
        android:layout_marginTop="19dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Address:"
        android:id="@+id/addView"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/emailView"
        android:layout_alignLeft="@+id/emailView"
        android:layout_alignStart="@+id/emailView" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Date Birth:"
        android:id="@+id/dobView"
        android:layout_marginTop="19dp"
        android:paddingBottom="50px"
        android:layout_below="@+id/addView"
        android:layout_alignLeft="@+id/addView"
        android:layout_alignStart="@+id/addView" />

    <TextView
        android:layout_width="700px"
        android:layout_height="wrap_content"
        android:id="@+id/resName"
        android:layout_alignTop="@+id/nameView"
        android:layout_above="@+id/emailView"
        android:layout_toRightOf="@+id/dobView" />

    <TextView
        android:layout_width="700px"
        android:layout_height="wrap_content"
        android:id="@+id/emailRes"
        android:layout_alignTop="@+id/emailView"
        android:layout_alignLeft="@+id/resName"
        android:layout_alignStart="@+id/resName"
        android:layout_above="@+id/addView" />

    <TextView
        android:layout_width="700px"
        android:layout_height="wrap_content"
        android:id="@+id/addRes"
        android:layout_above="@+id/dobView"
        android:layout_toRightOf="@+id/dobView"
        android:layout_toEndOf="@+id/dobView" />

    <TextView
        android:layout_width="700px"
        android:layout_height="wrap_content"
        android:id="@+id/dobRes"
        android:layout_alignTop="@+id/dobView"
        android:layout_alignRight="@+id/setbtn"
        android:layout_alignEnd="@+id/setbtn" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="150px"
        android:text="My Profile"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:paddingLeft="160sp"
        android:paddingTop="10sp"
        android:id="@+id/textView"
        android:background="#6233D6"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="600px"
        android:layout_height="130px"
        android:text="Edit Profile"
        android:textColor="#FFFFFF"
        android:id="@+id/editbtn"
        android:background="#666666"
        android:layout_below="@+id/dobView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="1600px"
        android:layout_height="400px"
        android:background="#C9C9C9"
        android:id="@+id/textView4"

        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/homebtn" />

    <ImageButton
        android:layout_width="200px"
        android:layout_height="220px"
        android:id="@+id/homebtn"
        android:src="@drawable/home2"
        android:layout_marginLeft="230px"
        android:layout_marginTop="1850px"
        android:background="@null"/>

    <ImageButton
        android:layout_width="200px"
        android:layout_height="200px"
        android:id="@+id/conbtn"
        android:src="@drawable/phone3"
        android:layout_marginLeft="650px"
        android:layout_marginTop="1880px"
        android:background="@null"/>

    <ImageButton
        android:layout_width="250px"
        android:layout_height="250px"
        android:id="@+id/setbtn"
        android:src="@drawable/set2"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/editbtn"
        android:layout_toEndOf="@+id/editbtn"
        android:background="@null"/>


</RelativeLayout>